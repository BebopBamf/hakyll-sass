name: hakyll-sass
version: 0.1.0
synopsis: Hakyll SASS compiler over hsass
license: MIT
license-file: LICENSE
author: Braden Walters
maintainer: vc@braden-walters.info
category: Web
build-type: Simple
cabal-version: >= 1.10

library
  exposed-modules: Hakyll.Web.Sass
  build-depends:
      base >= 4 && < 5
    , hakyll >= 4.7.0
    , data-default-class >= 0.0.1
    , hsass >= 0.2.0
  hs-source-dirs: src
  default-language: Haskell2010
